            "tab": "Game Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/gamepage/Events.css"
                    }
                },
                "no": {}
            }
        },
        "Better Nav Bar": {
            "description": "Tweak nav bar to be bigger and text to be more opaque",
            "default": "yes",
            "tab": "Game Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/gamepage/NavBar.css"
                    }
                },
                "no": {}
            }
        },
        "Thicker Scrollbar": {
            "description": "Thicker scrollbar for ease of use",
            "default": "yes",
            "tab": "General",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/ScrollBar.css"
                    }
                },
                "no": {}
            }
        },
        "Use System Accent Color": {
            "description": "Enables Use of System Accent Color from Millennium's settings.",
            "default": "no",
            "tab": "General",
            "values": {
                "no": {},
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/SystemAccent.css" 
                    }
                }
            }
        }
