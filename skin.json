{
    "Conditions": {
        "What's New": {
            "description": "Position/visibility of the What's New section in Library",
            "default": "Bottom of page",
            "tab": "Home Page",
            "values": {
                "Bottom of page": {
                    "TargetCss": {
                        "affects": ["^Steam$"],
                        "src": "config/WhatsNewBottom.css"
                    }
                },
                "Top of page": {
                    "TargetCss": {
                        "affects": ["^Steam$"],
                        "src": "config/WhatsNewTop.css"
                    }
                },
                "Hide entirely": {
                    "TargetCss": {
                        "affects": ["^Steam$"],
                        "src": "config/WhatsNewHidden.css"
                    }
                }
            }
        },
        "Remove Shine on Game Images": {
            "description": "Remove Shine/Glare on game grid images, which can cause discomfort",
            "default": "yes",
            "tab": "Home Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"],
                        "src": "config/RemoveShine.css"
                    }
                },
                "no": {}
            }
        },
        "Compact Home and Search": {
            "description": "Condense Home, Collections buttons, Search bar down to 2 rows",
            "default": "yes",
            "tab": "Home Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"],
                        "src": "steam/sidebar/HomeAndSearch.css"
                    }
                },
                "no": {}
            }
        },
        "Pre-2019 Style Game List": {
            "description": "Show more games with the old style game list",
            "default": "yes",
            "tab": "Home Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"],
                        "src": "steam/sidebar/GameList.css"
                    }
                },
                "no": {}
            }
        },
        "Swap Gamepage Columns": {
            "description": "Swaps gamepage columns and changes their widths to mimic a Pre-2019 library layout",
            "default": "yes",
            "tab": "Game Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/gamepage/Columns.css"
                    }
                },
                "no": {}
            }
        },
        "Compact Friends Activity and News": {
            "description": "Removing spacing and shrinks images to fit in more Friends Activity and News",
            "default": "yes",
            "tab": "Game Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/gamepage/ActivityNews.css"
                    }
                },
                "no": {}
            }
        },
        "Compact Events": {
            "description": "Removing spacing and shrinks images to fit in more Game Events",
            "default": "yes",
            "tab": "Game Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/gamepage/Events.css"
                    }
                },
                "no": {}
            }
        },
        "Better Nav Bar": {
            "description": "Tweak nav bar to be bigger and text to be more opaque",
            "default": "yes",
            "tab": "Game Page",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/gamepage/NavBar.css"
                    }
                },
                "no": {}
            }
        },
        "Thicker Scrollbar": {
            "description": "Thicker scrollbar for ease of use",
            "default": "yes",
            "tab": "General",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": [".*"],
                        "src": "steam/ScrollBar.css"
                    }
                },
                "no": {}
            }
        }
    },
