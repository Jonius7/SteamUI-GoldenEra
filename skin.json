    "Patches" : [
        {
            "MatchRegexString": "^Steam$",
            "TargetCss": "libraryroot.custom.css",
            "TargetJs": "libraryroot.custom.js"
        },
        {
            "MatchRegexString": "^Steam$",
            "TargetCss": "custom.css"
        },
        {
            "MatchRegexString": ".*SP Overlay:.*",
            "TargetCss": "overlay/Overlay.css"
        },
        {
            "MatchRegexString": ".*",
            "TargetCss": "overlay/GameOverview.css"
        },
        {
            "MatchRegexString": ".*",
            "TargetCss": "overlay/Notes.css",
            "TargetJs": "overlay/Notes.js"
        },
        {
            "MatchRegexString": ".*",
            "TargetCss": "overlay/Clock.css"
        }
    ],
	"RootColors": "colors.css",
